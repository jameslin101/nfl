.row
  -if !devise_error_messages!.blank?
    .span12
      .alert.alert-error
        = devise_error_messages!
  .span1
  .span8.pane.poll-pane
    .row-fluid
      %h1 Log Into Fansensus
      .spacing
    .row
      .span1
      .span5.floatleft.login-first
        %h4 Log In With Facebook
        %p [ Recommended ]
        .spacing
        = link_to image_tag('fb_signin.png'), user_omniauth_authorize_path(:facebook), :class =>"fb_signup"
        .spacing
        %ul
          %li See how your friends voted
          %li Answer your friends questions
          %li Easily share your polls with friends
      .span5.floatleft
        %h4 Log In With Email
        %p [ Or Sign Up ]
        .spacing
        = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html=> {:class => "form-horizontal"}) do |f|
          = f.email_field :email, :class => "input-medium", :placeholder => "Email"
          = f.password_field :password, :class => "input-medium", :placeholder => "Password"
          - if devise_mapping.rememberable?
            = f.label :remember_me, "Remember me"
            = f.check_box :remember_me
          <br><br>
          =f.submit "Sign in", :class => "btn btn-primary btn-large"
          <br><br>
          = render "devise/shared/links"

