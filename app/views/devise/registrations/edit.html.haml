.row
  .span6
    .well
      %h2 Edit #{resource_name.to_s.humanize}
      -if !devise_error_messages!.blank?      
        .alert.alert-error
          = devise_error_messages!
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "form-horizontal"}) do |f|
        .control-group
          = f.label :first_name, :class=> "control-label"
          .controls
            = f.text_field :first_name, :class => "input-medium"
        .control-group
          = f.label :last_name, :class=> "control-label"
          .controls
            = f.text_field :last_name, :class => "input-medium"
        .control-group
          = f.label :username, :class=> "control-label"
          .controls
            = f.text_field :username, :class => "input-medium"
        .control-group
          = f.label :email, :class=> "control-label"
          .controls
            = f.email_field :email, :class => "input-medium"
        .control-group
          = f.label :password, :class=> "control-label"
          .controls
            = f.password_field :password, :autocomplete => "off", :class => "input-medium"
        .control-group
          = f.label :password_confirmation, :class=> "control-label"
          .controls
            = f.password_field :password_confirmation, :class => "input-medium"
        .control-group
          = f.label :current_password, :class=> "control-label"
          .controls
            = f.password_field :current_password, :class => "input-medium"
        .form-actions
          = f.submit "Update",:class => "btn btn-success btn-large"
        %p
          #{link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete}.
        = link_to "Back", :back
