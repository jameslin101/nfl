!!!
%html
  %head
    %title Fansensus
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %title= content_for?(:title) ? yield(:title) : "Delayo"
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}    
    = stylesheet_link_tag 'application'
    = csrf_meta_tag
    = javascript_include_tag "application"
    = google_webfonts_link_tag :michroma => [400]
    = yield :scripts
%body
  .navbar.navbar-fixed-top.active
    .navbar-inner
      .container
        %a.title.brand(href="/") Fansens.us
        .nav-collapse
          %ul.nav
            %li= link_to "My Polls", my_polls_path
            %li= link_to "My Stats", my_stats_path
            %li= link_to "Leaderboard", leaderboard_path
          %ul.nav.pull-right
            - if user_signed_in?
              %li.dropdown
                %a.dropdown-toggle{:data => {:toggle => "dropdown"}, :href => '#'}
                  = current_user.first_name || current_user.email
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to "Profile", "/"
                  %li= link_to "Sign out", destroy_user_session_path, :method => :delete          
            - else 
              %li
                = link_to ('Sign in'), new_user_session_path

  .container
    .content
      .row
        .span12
          - if flash[:notice]
            .alert.alert-success
              = flash[:notice]
          - if flash[:error]
            .alert.alert-error
              = flash[:error]
          = yield
        %footer