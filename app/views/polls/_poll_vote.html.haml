.span12
  .row{:id => "#{poll._id}"}
    .pane
      .span5
        %h2.poll-header
          =poll.question
        %h3.askedby
          =poll.user.first_name
        <br>
        %h4.poll-subheader
          Week
          =poll.week
          \:
          =poll.subtitle
          %p
          Scoring:
          =poll.scoring
          %p
        %table.table
          %colgroup
            %col.span1
            %col.span3
          - poll.poll_options.each do |poll_option|
            %tr
              %td
                -if poll_option.can_vote?(current_user)
                  =link_to "Vote", poll_option_vote_up_path(poll_option), :remote => true, 
                                   :class =>"btn btn-primary", :id => poll_option._id
                -else
                  -if poll_option.voted?(current_user)
                    =link_to "Unvote",poll_option_unvote_path(poll_option), :remote => true, 
                                     :class =>"btn btn-warning", :id => poll_option._id
              %td
                =poll_option.name
        %h4
          Choose:
          =poll.user_votes_left(current_user)
          more
      .span3
        %h4#poll-subheader
          %p
          Notes:
          %p
          =poll.note